<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.help.HelpFragment"
        android:background="@drawable/background_gradient">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_layout_top"
            android:layout_marginBottom="@dimen/margin_layout_bottom">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/help_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:titleTextColor="@color/background_color"/>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:padding="5dp"
                app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="22sp"
                    android:fontFamily="@font/ru_eng_sriracha"
                    android:textStyle="bold"
                    android:text="@string/account"/>

                <LinearLayout
                    android:id="@+id/account_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp">

                    <androidx.emoji.widget.EmojiAppCompatButton
                        android:id="@+id/how_to_delete_account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:background="@null"
                        android:textAllCaps="false"
                        android:textAlignment="textStart"
                        android:fontFamily="@font/ru_eng_sriracha"
                        android:textColor="@color/first_color"
                        android:text="@string/how_to_delete_account"/>

                    <androidx.emoji.widget.EmojiAppCompatButton
                        android:id="@+id/forget_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:background="@null"
                        android:textAllCaps="false"
                        android:fontFamily="@font/ru_eng_sriracha"
                        android:textAlignment="textStart"
                        android:textStyle="normal"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/first_color"
                        android:text="@string/help_forgot_password"/>

                    <androidx.emoji.widget.EmojiAppCompatButton
                        android:id="@+id/bad_user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:background="@null"
                        android:fontFamily="@font/ru_eng_sriracha"
                        android:textAllCaps="false"
                        android:textAlignment="textStart"
                        android:textStyle="normal"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/first_color"
                        android:text="@string/bad_nick_name"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="22sp"
                    android:fontFamily="@font/ru_eng_sriracha"
                    android:textStyle="bold"
                    android:text="@string/game"/>

                <LinearLayout
                    android:id="@+id/game_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp">

                    <androidx.emoji.widget.EmojiAppCompatButton
                        android:id="@+id/how_to_play"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:background="@null"
                        android:fontFamily="@font/ru_eng_sriracha"
                        android:textAlignment="textStart"
                        android:textAllCaps="false"
                        android:textStyle="normal"
                        android:textColor="@color/first_color"
                        android:text="@string/how_to_play"/>

                    <androidx.emoji.widget.EmojiAppCompatButton
                        android:id="@+id/statistic_do_not_write"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:background="@null"
                        android:textAlignment="textStart"
                        android:textStyle="normal"
                        android:fontFamily="@font/ru_eng_sriracha"
                        android:textAllCaps="false"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/first_color"
                        android:text="@string/i_passed_the_level"/>

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/ru_eng_sriracha"
                    android:text="@string/other"/>

                <LinearLayout
                    android:id="@+id/other_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp">

                    <androidx.emoji.widget.EmojiAppCompatButton
                        android:id="@+id/how_to_disable_adds"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:background="@null"
                        android:textAllCaps="false"
                        android:textAlignment="textStart"
                        android:textStyle="normal"
                        android:fontFamily="@font/ru_eng_sriracha"
                        android:textColor="@color/first_color"
                        android:text="@string/how_to_disable_adds"/>

                    <androidx.emoji.widget.EmojiAppCompatButton
                        android:id="@+id/what_is_emos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:background="@null"
                        android:textAllCaps="false"
                        android:textAlignment="textStart"
                        android:textStyle="normal"
                        android:fontFamily="@font/ru_eng_sriracha"
                        android:textColor="@color/first_color"
                        android:text="@string/what_is_emos"/>

                    <androidx.emoji.widget.EmojiAppCompatButton
                        android:id="@+id/how_to_combine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:fontFamily="@font/ru_eng_sriracha"
                        android:background="@null"
                        android:textAllCaps="false"
                        android:textAlignment="textStart"
                        android:textStyle="normal"
                        android:textColor="@color/first_color"
                        android:text="@string/how_to_combine"/>

                </LinearLayout>

            </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.core.widget.NestedScrollView>

        </LinearLayout>


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/write_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            app:backgroundTint="@color/main_color"
            android:scaleType="center"
            android:src="@drawable/icons8_pencil_24px"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="@dimen/margin_layout_bottom"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>

