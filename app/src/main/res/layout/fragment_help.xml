<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.help.HelpFragment"
        android:background="@color/background_color">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_color">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/help_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:titleTextColor="@color/background_color"/>


        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:text="@string/account"/>

                <LinearLayout
                    android:id="@+id/account_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp">

                    <androidx.emoji.widget.EmojiAppCompatButton
                        android:id="@+id/how_to_delete_account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:background="@null"
                        android:textAllCaps="false"
                        android:textAlignment="textStart"
                        android:textColor="@color/main_color"
                        android:text="@string/how_to_delete_account"/>

                    <androidx.emoji.widget.EmojiAppCompatButton
                        android:id="@+id/forget_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:background="@null"
                        android:textAllCaps="false"
                        android:textAlignment="textStart"
                        android:textStyle="normal"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/main_color"
                        android:text="@string/help_forgot_password"/>

                    <androidx.emoji.widget.EmojiAppCompatButton
                        android:id="@+id/bad_user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:background="@null"
                        android:textAllCaps="false"
                        android:textAlignment="textStart"
                        android:textStyle="normal"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/main_color"
                        android:text="@string/bad_nick_name"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:text="@string/game"/>

                <LinearLayout
                    android:id="@+id/game_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp">

                    <androidx.emoji.widget.EmojiAppCompatButton
                        android:id="@+id/how_to_play"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:background="@null"
                        android:textAlignment="textStart"
                        android:textAllCaps="false"
                        android:textStyle="normal"
                        android:textColor="@color/main_color"
                        android:text="@string/how_to_play"/>

                    <androidx.emoji.widget.EmojiAppCompatButton
                        android:id="@+id/statistic_do_not_write"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:background="@null"
                        android:textAlignment="textStart"
                        android:textStyle="normal"
                        android:textAllCaps="false"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/main_color"
                        android:text="@string/i_passed_the_level"/>

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:text="@string/other"/>

                <LinearLayout
                    android:id="@+id/other_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp">

                    <androidx.emoji.widget.EmojiAppCompatButton
                        android:id="@+id/how_to_disable_adds"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:background="@null"
                        android:textAllCaps="false"
                        android:textAlignment="textStart"
                        android:textStyle="normal"
                        android:textColor="@color/main_color"
                        android:text="@string/how_to_disable_adds"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/write_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            app:backgroundTint="@color/main_color"
            android:src="@drawable/icons8_pencil_24px"
            android:layout_margin="16dp"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>

