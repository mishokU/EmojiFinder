<?xml version="1.0" encoding="utf-8"?>


<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="@drawable/generator_emoji_style">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/you_won_a_random_prize_chose_one_box"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                android:textSize="22sp"
                android:textColor="@color/first_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/first_chest_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1">

                    <androidx.emoji.widget.EmojiAppCompatEditText
                        android:id="@+id/first_chest_emoji"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:layout_margin="10dp"
                        android:clickable="false"
                        android:alpha="0"
                        android:focusable="false"
                        android:textSize="30sp"
                        android:background="@color/background_color"
                        android:textAlignment="center"/>

                    <androidx.emoji.widget.EmojiAppCompatEditText
                        android:id="@+id/first_emoji_placeholder"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:focusable="false"
                        android:clickable="false"
                        android:background="@null"
                        android:alpha="1"
                        android:textSize="60sp"
                        android:textAlignment="center"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/second_chest_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1">

                    <androidx.emoji.widget.EmojiAppCompatEditText
                        android:id="@+id/second_chest_emoji"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:layout_margin="10dp"
                        android:clickable="false"
                        android:focusable="false"
                        android:alpha="0"
                        android:textSize="30sp"
                        android:background="@null"
                        android:textAlignment="center"/>

                    <androidx.emoji.widget.EmojiAppCompatEditText
                        android:id="@+id/second_emoji_placeholder"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:focusable="false"
                        android:clickable="false"
                        android:background="@null"
                        android:alpha="1"
                        android:textSize="60sp"
                        android:textAlignment="center"/>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

