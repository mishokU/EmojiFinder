<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="profile"
            type="com.example.emojifinder.data.db.remote.models.account.MainAccountModel" />
    </data>


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.account.AccountAvatarFragment">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/main_color">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_avatar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="start"
                android:textAlignment="viewStart"
                app:titleTextAppearance="@style/Toolbar.TitleText"
                app:titleTextColor="@color/background_color"
                app:title="@string/app_name"/>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/main_color">

                <LinearLayout
                    android:id="@+id/avatar_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/left_change_avatar_btn"
                            android:layout_width="20dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:paddingStart="2dp"
                            app:icon="@drawable/icons8_back_16px_left"
                            app:iconSize="20dp"
                            app:strokeColor="@color/main_color"
                            app:iconTint="@android:color/white"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                        <androidx.emoji.widget.EmojiAppCompatButton
                            android:id="@+id/emoji_avatar"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:text="ðŸ˜‚"
                            android:textSize="30sp"
                            android:textAlignment="center"
                            android:maxLines="1"
                            android:background="@drawable/avatar_emoji_style" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/right_change_avatar_btn"
                            android:layout_width="20dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:paddingStart="0dp"
                            app:icon="@drawable/icons8_back_16px_right"
                            app:iconSize="20dp"
                            app:strokeColor="@color/main_color"
                            app:iconTint="@android:color/white"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/save_avatar_btn"
                        android:text="@string/save"
                        android:textAllCaps="false"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:backgroundTint="@color/blue_color"
                        android:textColor="@color/background_color" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/avatar_place"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignBottom="@id/avatar_place"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/user_values"
                            android:layout_marginEnd="2dp"
                            android:padding="2dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_marginEnd="2dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/emos_pic"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:layout_gravity="center"
                                    android:text="100"/>

                            </LinearLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/user_values"
                            android:layout_marginEnd="2dp"
                            android:padding="2dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_marginEnd="2dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/icons8_happy_96px"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:layout_gravity="center"
                                    android:text="100"/>

                            </LinearLayout>


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/user_values"
                            android:padding="2dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_marginEnd="2dp"
                                android:layout_gravity="center"
                                android:src="@drawable/icons8_closed_treasure_chest_128px"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:layout_gravity="center"
                                android:text="100"/>

                            </LinearLayout>

                        </RelativeLayout>

                    </LinearLayout>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="6dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/your_emojis_style">

                        <LinearLayout
                            android:id="@+id/your_emojis_place"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:orientation="vertical" />

                    </HorizontalScrollView>

                </LinearLayout>

            </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/main_color"
                    android:layout_marginTop="10dp">

                    <com.google.android.material.button.MaterialButton
                        android:layout_weight="1"
                        android:id="@+id/left_change_generator_btn"
                        android:layout_width="20dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:paddingStart="5dp"
                        app:icon="@drawable/icons8_back_16px_left"
                        app:iconSize="15dp"
                        app:strokeColor="@color/main_color"
                        app:iconTint="@android:color/white"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <androidx.emoji.widget.EmojiAppCompatButton
                            android:id="@+id/first_generator_field"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:padding="5dp"
                            android:clickable="true"
                            android:textSize="24sp"
                            android:textAlignment="center"
                            android:focusable="true"
                            android:layout_centerInParent="true"
                            android:layout_margin="5dp"
                            android:layout_gravity="center"
                            android:background="@drawable/generator_emoji_style"/>

                    </RelativeLayout>

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:textSize="32sp"
                        android:textColor="@android:color/white"
                        android:text="+"/>

                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <androidx.emoji.widget.EmojiAppCompatButton
                            android:id="@+id/second_generator_field"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:padding="5dp"
                            android:textSize="24sp"
                            android:textAlignment="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_centerInParent="true"
                            android:layout_margin="5dp"
                            android:layout_gravity="center"
                            android:background="@drawable/generator_emoji_style"/>

                    </RelativeLayout>

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:textColor="@android:color/white"
                        android:textSize="32sp"
                        android:text="+"/>


                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <androidx.emoji.widget.EmojiAppCompatButton
                            android:id="@+id/third_generator_field"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:padding="5dp"
                            android:textSize="24sp"
                            android:textAlignment="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_centerInParent="true"
                            android:layout_margin="5dp"
                            android:layout_gravity="center"
                            android:background="@drawable/generator_emoji_style"/>

                    </RelativeLayout>

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:textColor="@android:color/white"
                        android:textSize="32sp"
                        android:text="="/>


                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <androidx.emoji.widget.EmojiButton
                            android:id="@+id/result_generator_field"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:padding="5dp"
                            android:textSize="24sp"
                            android:textAlignment="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_centerInParent="true"
                            android:layout_margin="5dp"
                            android:layout_gravity="center"
                            android:background="@drawable/generator_emoji_style"/>

                    </RelativeLayout>

                    <com.google.android.material.button.MaterialButton
                        android:layout_weight="1"
                        android:id="@+id/right_change_generator_btn"
                        android:layout_width="20dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:paddingStart="5dp"
                        app:icon="@drawable/icons8_back_16px_right"
                        app:iconSize="15dp"
                        app:strokeColor="@color/main_color"
                        app:iconTint="@android:color/white"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/generate_emoji_set"
                        android:text="@string/generate"
                        android:layout_weight="1"
                        android:layout_marginEnd="5dp"
                        android:backgroundTint="@color/blue_color"
                        android:textColor="@color/background_color"
                        android:textAllCaps="false"
                        android:layout_width="match_parent"
                        android:layout_height="45dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/reset_emojis_btn"
                        android:text="@string/reset"
                        android:layout_weight="1"
                        android:layout_marginStart="5dp"
                        android:textAllCaps="false"
                        app:backgroundTint="@color/blue_color"
                        android:textColor="@color/background_color"
                        android:layout_width="match_parent"
                        android:layout_height="45dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/main_color"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:layout_margin="10dp"
                        android:textColor="@color/background_color"
                        android:text="@string/shop"/>

                    <androidx.emoji.widget.EmojiAppCompatButton
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"

                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <com.google.android.material.chip.ChipGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:singleLine="true"
                            android:layout_margin="5dp">

                            <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Animals"
                                style="@style/Widget.MaterialComponents.Chip.Action"/>

                            <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Animals"
                                style="@style/Widget.MaterialComponents.Chip.Action"/>

                            <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Animals"
                                style="@style/Widget.MaterialComponents.Chip.Action"/>

                            <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Animals"
                                style="@style/Widget.MaterialComponents.Chip.Action"/>

                            <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Animals"
                                style="@style/Widget.MaterialComponents.Chip.Action"/>

                            <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Animals"
                                style="@style/Widget.MaterialComponents.Chip.Action"/>

                        </com.google.android.material.chip.ChipGroup>

                        <androidx.gridlayout.widget.GridLayout
                            android:id="@+id/shop_emojis_place"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="6dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/your_emojis_style" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>



        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
