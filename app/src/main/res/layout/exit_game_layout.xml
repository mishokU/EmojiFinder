<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardCornerRadius="30dp"
    app:cardPreventCornerOverlap="true"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/generator_emoji_style"
        android:orientation="vertical">

        <TextView
            android:id="@+id/errorText"
            android:padding="10dp"
            android:background="@drawable/emoji_shop_top_place_style"
            android:text="@string/exit_game_text"
            android:textSize="20sp"
            android:fontFamily="@font/ru_eng_sriracha"
            android:textColor="@color/background_color"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/music"
                android:textSize="22sp"
                android:fontFamily="@font/ru_eng_sriracha"
                android:layout_marginStart="10dp"
                android:textColor="@color/first_color"/>

            <Switch
                android:id="@+id/exit_music_switcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/resume_game_btn"
                android:text="@string/back_to_game"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:layout_marginEnd="5dp"
                android:textSize="18sp"
                android:fontFamily="@font/ru_eng_sriracha"
                android:backgroundTint="@color/textOrangeColor"
                android:textColor="@color/background_color"
                android:layout_width="match_parent"
                app:cornerRadius="10dp"
                android:layout_height="wrap_content" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/exit_game_btn"
                android:text="@string/finish"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:layout_marginStart="5dp"
                android:textSize="18sp"
                android:fontFamily="@font/ru_eng_sriracha"
                android:backgroundTint="@color/red_color"
                app:backgroundTint="@color/red_color"
                app:cornerRadius="10dp"
                android:textColor="@color/background_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </LinearLayout>

</FrameLayout>