<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardCornerRadius="30dp"
    app:cardPreventCornerOverlap="true"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/generator_emoji_style"
        android:orientation="vertical">

        <TextView
            android:id="@+id/errorText"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp"
            android:text="@string/exit_game_text"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/resume_game_btn"
                android:text="@string/back_to_game"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:layout_marginEnd="5dp"
                android:backgroundTint="@color/blue_color"
                android:textColor="@color/background_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/exit_game_btn"
                android:text="@string/finish"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:layout_marginStart="5dp"
                android:backgroundTint="@color/red_color"
                app:backgroundTint="@color/red_color"
                android:textColor="@color/background_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </LinearLayout>

</FrameLayout>