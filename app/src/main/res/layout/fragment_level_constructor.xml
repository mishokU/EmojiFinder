<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="level"
            type="com.example.emojifinder.ui.categories.SmallLevelModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_color"
        tools:context=".ui.game.GameFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/constructor_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_below="@id/constructor_toolbar"
                android:layout_above="@id/stat_place">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/constructor_level_rv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:spanCount="10"
                    android:layout_centerInParent="true"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/stat_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"
                android:layout_above="@id/all_emojis_constructor">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:layout_marginStart="5dp"
                    app:backgroundTint="@color/blue_color"
                    android:layout_marginEnd="5dp"
                    android:text="@string/create"
                    android:layout_weight="1"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    app:backgroundTint="@color/blue_color"
                    android:text="@string/reset"
                    android:textAllCaps="false"
                    android:layout_weight="1"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:text="@string/save_info"
                    app:backgroundTint="@color/blue_color"
                    android:textAllCaps="false"
                    android:layout_weight="1"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/all_emojis_constructor"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scrollbars="vertical"
                android:layout_alignParentBottom="true"
                app:spanCount="8"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"/>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/level_progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/loading_dots"/>

        </RelativeLayout>

    </FrameLayout>

</layout>

