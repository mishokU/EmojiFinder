<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_color"
        tools:context=".ui.main.MainMenuFragment">

        <androidx.emoji.widget.EmojiTextView
            android:id="@+id/emojiTextView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\uD83D\uDE19"
            android:textColor="@color/background_color"
            android:textSize="52sp"
            app:layout_constraintBottom_toTopOf="@+id/palette"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.078"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.666" />


        <androidx.emoji.widget.EmojiTextView
            android:id="@+id/emojiTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="44dp"
            android:text="\uD83D\uDE10"
            android:textColor="@color/background_color"
            android:textSize="52sp"
            app:layout_constraintBottom_toTopOf="@+id/palette"
            app:layout_constraintStart_toEndOf="@+id/emojiTextView3" />

        <androidx.emoji.widget.EmojiTextView
            android:id="@+id/emojiTextView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:text="\uD83D\uDE10"
            android:textColor="@color/background_color"
            android:textSize="52sp"
            app:layout_constraintBottom_toTopOf="@+id/palette"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/emojiTextView2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.32" />

        <androidx.emoji.widget.EmojiTextView
            android:id="@+id/emojiTextView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="\uD83D\uDE10"
            android:textColor="@color/background_color"
            android:textSize="52sp"
            app:layout_constraintBottom_toTopOf="@+id/palette"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.269"
            app:layout_constraintStart_toEndOf="@+id/emojiTextView4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.666" />

        <ImageView
            android:id="@+id/palette"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:src="@drawable/palette"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieAnimationView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toTopOf="@+id/exit_btn"
            app:layout_constraintEnd_toEndOf="@+id/palette"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/start_category_game_btn"
            app:layout_constraintTop_toTopOf="@+id/start_arcade_game_btn"
            app:layout_constraintVertical_bias="0.0"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/stars_animation" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/settings_main_btn"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="90dp"
            android:layout_height="75dp"
            android:layout_below="@id/palette"
            android:layout_marginStart="105dp"
            android:layout_marginBottom="27dp"
            android:text="@string/settings"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            app:cornerRadius="50dp"
            app:layout_constraintBottom_toBottomOf="@+id/palette"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/palette"
            app:layout_constraintTop_toTopOf="@+id/palette"
            app:layout_constraintVertical_bias="1.0"
            app:rippleColor="@color/green_color" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/profile_main_btn"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_below="@id/palette"
            android:layout_marginStart="43dp"
            android:layout_marginBottom="110dp"
            android:text="@string/profile"
            android:textAllCaps="false"
            android:textColor="@color/main_color"
            android:textSize="14sp"
            app:cornerRadius="50dp"
            app:layout_constraintBottom_toBottomOf="@+id/palette"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/palette"
            app:layout_constraintTop_toTopOf="@+id/palette"
            app:layout_constraintVertical_bias="1.0"
            app:rippleColor="@color/yellow_color" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/start_category_game_btn"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="90dp"
            android:layout_height="75dp"
            android:layout_below="@id/palette"
            android:layout_marginStart="63dp"
            android:layout_marginBottom="202dp"
            android:text="@string/start_category_game"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            app:cornerRadius="50dp"
            app:layout_constraintBottom_toBottomOf="@+id/palette"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/palette"
            app:layout_constraintTop_toTopOf="@+id/palette"
            app:layout_constraintVertical_bias="0.983"
            app:rippleColor="@color/blue_color" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/shop_btn"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_below="@id/palette"
            android:layout_marginStart="142dp"
            android:text="@string/shop"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:icon="@drawable/shop_26px"
            app:cornerRadius="50dp"
            app:layout_constraintBottom_toTopOf="@+id/shop_main_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.081"
            app:layout_constraintStart_toStartOf="@+id/palette"
            app:layout_constraintTop_toBottomOf="@+id/start_arcade_game_btn"
            app:layout_constraintVertical_bias="0.68"
            app:rippleColor="@color/red_color" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/start_arcade_game_btn"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="90dp"
            android:layout_height="75dp"
            android:layout_below="@id/palette"
            android:layout_marginStart="142dp"
            android:layout_marginBottom="265dp"
            android:text="@string/start_arcade_game"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            app:cornerRadius="50dp"
            app:layout_constraintBottom_toBottomOf="@+id/palette"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.038"
            app:layout_constraintStart_toStartOf="@+id/palette"
            app:layout_constraintTop_toTopOf="@+id/palette"
            app:layout_constraintVertical_bias="0.933"
            app:rippleColor="@color/red_color" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/shop_main_btn"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="84dp"
            android:layout_height="82dp"
            android:layout_below="@id/palette"
            android:layout_marginStart="220dp"
            android:layout_marginBottom="65dp"
            android:text="@string/emojis"
            app:rippleColor="@null"
            android:textAllCaps="false"
            android:textColor="@color/background_color"
            app:cornerRadius="40dp"
            app:layout_constraintBottom_toBottomOf="@+id/palette"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/palette"
            app:layout_constraintTop_toTopOf="@+id/palette"
            app:layout_constraintVertical_bias="1.0" />

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:adSize="BANNER"
            app:adUnitId="ca-app-pub-3940256099942544/6300978111"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
